    </tr>
  </thead>
  <tbody>
      @foreach(var item in Model){
    <tr>
      <td>
        <div class="d-flex align-items-center">
          <img
              src=@Url.Content("~/Images/"+item.ImagePath)
              alt=""
              style="width: 45px; height: 45px"
              class="rounded-circle" asp-append-version="true"
              />
          <div class="ms-3">
            <p class="fw-bold mb-1">@item.FirstName</p>
            
          </div>
        </div>
      </td>
      <td>
        <p class="fw-normal mb-1">@item.Email</p>
        
      </td>
      
    
      <td>
           
                               <a class="btn btn-danger" asp-action="Block" onclick="reg()" asp-route-id="@item.UserId">Block</a> 

      </td>
    </tr>
    }
  </tbody>
</table>
