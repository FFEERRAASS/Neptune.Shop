@model IEnumerable<ConmsgFp>
@{
    ViewData["Title"] = "contact";
    Layout = "~/Views/_admin.cshtml";
}
<br />
<br />
<div class="midde_cont"style="height:800px">
                  <div class="container-fluid" style="height:800px">
                    
                     <!-- row -->
                     <div class="row"style="height :800px" >
                        <!-- table section -->
                        <div class="col-md-12"style="height:800px">
                           <div class="white_shd full margin_bottom_30"style="height:800px">
                              <div class="full graph_head">
                                 <div class="heading1 margin_0">
                                    <h2>Email Box</h2>
                                 </div>
                              </div>
                              <div class="full inbox_inner_section">
                                 <div class="row">
                                    <div class="col-md-12">
                                       <div class="full padding_infor_info">
                                          <div class="mail-box">
                                             <aside class="sm-side">
                                                <div class="user-head">
                                                   <a class="inbox-avatar" href="javascript:;">
                                                   <img  width="65" src=@Url.Content("~/Images/"+@ViewBag.Image) alt="#" />
                                                   </a>
                                                   <div class="user-name">
                                                      <h5><a>@ViewBag.Firstn</a></h5>
                                                      
                                                   </div>
                                                </div>
                                                <div class="inbox-body">
                                                  
                                                   <!-- Modal -->
                                                </div>
                                               
                                                
                                             </aside>
                                             <aside class="lg-side">
                                                <div class="inbox-head">
                                                   
                                                   <form asp-action="contact" class="pull-right position search_inbox">
                                                      <div class="input-append">
                                                         <input type="text" class="sr-input" name="sname" placeholder="Search Mail By Name">
                                                         <button class="btn sr-btn" type="submit"><i class="fa fa-search"></i></button>
                                                      </div>
                                                   </form>
                                                </div>
                                                <div class="inbox-body">
                                                   <div class="mail-option">
                                                      <div class="chk-all">
                                                         <div class="btn-group">
                                                            <a data-toggle="dropdown" href="#" class="btn mini all" aria-expanded="false"> All <i class="fa fa-angle-down "></i></a>
                                                            <ul class="dropdown-menu">
                                                              
                                                            </ul>
                                                         </div>
                                                      </div>
                                                      
                                                      <div class="btn-group hidden-phone">
                                                         
                                                         <ul class="dropdown-menu">
                                                            <li><a href="#"><i class="fa fa-pencil"></i> Mark as Read</a></li>
                                                            <li><a href="#"><i class="fa fa-ban"></i> Spam</a></li>
                                                            <li class="divider"></li>
                                                            <li><a href="#"><i class="fa fa-trash-o"></i> Delete</a></li>
                                                         </ul>
                                                      </div>
                                                      <div class="btn-group">
                                                       
                                                         <ul class="dropdown-menu">
                                                            <li><a href="#"><i class="fa fa-pencil"></i> Mark as Read</a></li>
                                                            <li><a href="#"><i class="fa fa-ban"></i> Spam</a></li>
                                                            <li class="divider"></li>
                                                            <li><a href="#"><i class="fa fa-trash-o"></i> Delete</a></li>
                                                         </ul>
                                                      </div>
                                                     
                                                   </div>
                                                   <table class="table table-inbox table-hover">
                                                      <tbody>
                                                           @foreach(var item in Model){
                                                         <tr class="unread">
                                                            <td class="inbox-small-cells">
                                                               <div class="custom-control custom-checkbox">
                                                                  <input type="checkbox" class="custom-control-input" id="customCheck1">
                                                                  <label class="custom-control-label" for="customCheck1"></label>
                                                               </div>

                                                            </td>
                                                           
                                                            <td class="inbox-small-cells"><i class="fa fa-star"></i></td>
                                                            <td class="view-message  dont-show">@item.FullName</td>
                                                            <td class="view-message ">@item.Email</td>
                                                            <td class="view-message  inbox-small-cells">@item.Subject</td>
                                                            <td class="view-message  text-right">@item.Msg

                                                            </td>
                                                            
                                                             </tr>
                                                        }
                                                         
                                                      </tbody>
                                                   </table>
                                                </div>
                                             </aside>
                                          </div>
                                       </div>
                                    </div>
                                 </div>
                              </div>
                           </div>
                        </div>
                         </div>
                          </div>
                           </div>
