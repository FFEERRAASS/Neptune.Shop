    <script>
        function AddCarts(HandId) {

            let id = HandId;
            console.log(id);
            $.ajax({
                url: "/HandcraftFps/AddCart",
                type: "POST",
                data: { HandId: id },
                success: function (data) {

                 if(data==0)
                 {
                     Swal.fire({
                      title: 'Are you sure?',
                      text: "you must be logged in!",
                      icon: 'warning',
                      showCancelButton: true,
                      confirmButtonColor: '#00B98E',
                      cancelButtonColor: '#b90000',
                      confirmButtonText: 'Yes, GO Login'
                    }).then((result) => {
                      if (result.isConfirmed) {
                            window.location.href ="/Login/Loginuser";
                      }
                    })

                 }
                 else{
                     console.log(data);
                     Swal.fire(
                      'Added successfully!',
                      'You clicked the button!',
                      'success'
                    )

                    }



                }
            })
        }
        </script>
