@model UserFp
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
	<title>Register</title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
<!--===============================================================================================-->	
	<link rel="icon" type="image/png" href="~/Newlogin/images/icons/favicon.ico"/>
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/Newlogin/vendor/bootstrap/css/bootstrap.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/Newlogin/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/Newlogin/vendor/animate/animate.css">
<!--===============================================================================================-->	
	<link rel="stylesheet" type="text/css" href="~/Newlogin/vendor/css-hamburgers/hamburgers.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/Newlogin/vendor/select2/select2.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/Newlogin/css/util.css">
	<link rel="stylesheet" type="text/css" href="~/Newlogin/css/main.css">
<!--===============================================================================================-->
</head>
<body>

	<div class="limiter">
		<div class="container-login100" >
			<div  class="wrap-login100" >
				<div class="login100-pic js-tilt" data-tilt>
					<img src="~/Images/Screenshot__25_-removebg-preview.png" alt="IMG">
				</div>

				<form class="login100-form validate-form" method="POST" id="signup-form" class="signup-form" asp-action="Register" enctype="multipart/form-data" style="width: 1100;">
					<span class="login100-form-title">
						User Register
					</span>

					<div class="wrap-input100 validate-input" >
						<input asp-for="FirstName" class="input100" type="text"  placeholder="First Name">
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<i class="fa fa-user" aria-hidden="true"></i>
						</span>
					</div>

					<div class="wrap-input100 validate-input">
						<input asp-for="LastName" class="input100" type="text"  placeholder="Last Name">
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<i class="fa  fa-user" aria-hidden="true"></i>
						</span>
					</div>
					

					<div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">
						<input asp-for="Email" class="input100" type="text"  placeholder="Email">
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<i class="fa fa-inbox" aria-hidden="true"></i>
						</span>
					</div>
					@*<div class="wrap-input100 validate-input" >
						<input asp-for="CraftName"  class="input100" type="text"  placeholder="Craft Name">
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<i class="fa fa-star" aria-hidden="true"></i>
						</span>
					</div>*@
					<div class="wrap-input100 validate-input" >
						<input class="input100" type="text" name="Username"  placeholder="Username">
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<i class="fa fa-user" aria-hidden="true"></i>
						</span>
					</div>
					<div class="wrap-input100 validate-input" data-validate="Password is required">
						<input class="input100" type="password" name="Password"  placeholder="Password">
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<i class="fa fa-lock" aria-hidden="true"></i>
						</span>
					</div>
					<div class="form-group">
							 <label asp-for="ImageFile" class="control-label">Upload Image</label>
							 
							<input asp-for="ImageFile" class="form-control"  />
						</div>
					<div class="wrap-input100 validate-input" >
						<input asp-for="Gender"  type="radio" id="x1" placeholder="Gender" value="1" class="custom-radio" >
						<label asp-for="Gender">Male</label><br />
						<input asp-for="Gender"  type="radio" id="x2" placeholder="Gender" value="0" class="custom-radio" >
						<label asp-for="Gender">Female</label><br />

					</div>
					<div class="container-login100-form-btn">
						<button type="submit" name="submit" value="Sign up" onclick="reg()" class="login100-form-btn">
							Sign UP
						</button>
					</div>
					<br />
					<i class="txt2">@Html.ValidationSummary()</i>
					<a class="txt2" asp-action="LoginUser">
							Back
							<i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
						</a>

				</form>
			</div>
		</div>
	</div>


<!--===============================================================================================-->	
	<script src="~/Newlogin/vendor/jquery/jquery-3.2.1.min.js"></script>
<!--===============================================================================================-->
	<script src="~/Newlogin/vendor/bootstrap/js/popper.js"></script>
	<script src="~/Newlogin/vendor/bootstrap/js/bootstrap.min.js"></script>
<!--===============================================================================================-->
	<script src="~/Newlogin/vendor/select2/select2.min.js"></script>
<!--===============================================================================================-->
	<script src="~/Newlogin/vendor/tilt/tilt.jquery.min.js"></script>
	<script >
		$('.js-tilt').tilt({
			scale: 1.1
		})
	</script>
			<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>


 <script> type="text/javascript" href="http://code.jquery.com/jquery-1.10.2.js%22%3E" </script>


	<script>
		function reg() {

			Swal.fire(
  'Please wait a moment',
  'You will be directed to the login page upon completion of your registration',
  'info'
)
		}
		</script>
<!--===============================================================================================-->
	<script src="~/Newlogin/js/main.js"></script>

</body>
</html>


































