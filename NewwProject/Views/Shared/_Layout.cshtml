<body>
    <div class="container-xxl bg-white p-0">
        <!-- Spinner Start -->
        <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
        <!-- Spinner End -->


        <!-- Navbar & Hero Start -->
        <div class="container-xxl position-relative p-0">
            <nav class="navbar navbar-expand-lg navbar-light px-4 px-lg-5 py-3 py-lg-0">
                <a asp-action="Index" class="navbar-brand p-0">
                    <h1 class="m-0">Neptune Shop</h1>
                    <!-- <img src="~/home/img/logo.png" alt="Logo"> -->
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                    <span class="fa fa-bars"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <div class="navbar-nav ms-auto py-0">
                        <a asp-action="Index" asp-controller="Home"class="nav-item nav-link">Home</a>
                        <a asp-action="About" asp-controller="Home"class="nav-item nav-link">About</a>
                        <a asp-action="Index" asp-controller="HandcraftFps" class="nav-item nav-link">Product</a>
                        <a asp-action="Testimonial" asp-controller="Home" class="nav-item nav-link">Testimonial</a>
                         <a asp-action="Contact" asp-controller="Home" class="nav-item nav-link">Contact</a>

                        <div class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Account</a>
                            <div class="dropdown-menu m-0">
                                <a asp-action="Index" asp-controller="UserFps" class="dropdown-item">Profile</a>
                                 <a asp-action="logout" asp-controller="Home" class="dropdown-item">LogOut</a>
                                
                            </div>
                        </div>
                    </div>
                    
                    <a asp-action="Index" asp-controller="OrdersFps" class="btn btn-light rounded-pill text-primary py-2 px-4 ms-lg-5"><i class="bi bi-cart"></i></a>
                     <a asp-action="favourite" asp-controller="handcraftFps" class="btn btn-light rounded-pill text-primary py-2 px-4 ms-lg-2"><i class="fa fa-star"></i></a>
                </div>
            </nav>

            <div class="container-xxl bg-primary hero-header">
                <div class="container">
                    <div class="row g-5 align-items-center">
                        <div class="col-lg-6 text-center text-lg-start">
                            <br />
                            
                            <img src="~/Images/68f7c51df2bf37d1bf26e60acd404fe5-removebg-preview.png" width="100" height="100" />
                        </div>
                        <div class="col-lg-6 text-center text-lg-start">

                        </div>
                    </div>
                </div>
            </div>
        </div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

