
@{
    ViewData["Title"] = "AddCraft";
    Layout = "~/Views/_Vendor.cshtml";
}

@model NewwProject.Models.HandcraftFp




<br /><br /><br /><br />
<div class="container-xxl py-6" >
            <div class="container" >
                <div class="mx-auto text-center wow fadeInUp" data-wow-delay="0.1s" style="max-width: 600px;" >
                    <div class="d-inline-block border rounded-pill text-primary px-4 mb-3"> </div>
                    <h2 class="mb-5" style="color:forestgreen">Create a new Information</h2>
                </div>
                <div class="row justify-content-center" >
                    <div class="col-lg-7 wow fadeInUp" data-wow-delay="0.1s">
                        <form asp-action="AddCraft" enctype="multipart/form-data"  >
                             <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <div class="form-input">
                                        <br />
                                           <label asp-for="Handcraft" class="control-label"></label>
                                             <input asp-for="Handcraft" class="form-control" />
                                             <span asp-validation-for="Handcraft" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-input">
                                                        <br />
                                                      <label asp-for="Price" class="control-label"></label>
                                                      <input asp-for="Price" class="form-control" />
                                                      <span asp-validation-for="Price" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                 <div class="col-md-6">
                                                    <div class="form-input">
                                                        <br />
                                                        <label asp-for="Descriptions" class="control-label"></label>
                                                                       <input asp-for="Descriptions" class="form-control" />
                                                                       <span asp-validation-for="Descriptions" class="text-danger"></span>
                                                                            </div>
                                                </div>
                                                 <div class="col-md-6">
                                                    <div class="form-input">
                                                        <br />
                                                      <label asp-for="ImageFile" class="control-label"></label>
                                                        <input asp-for="ImageFile" class="form-control" />
                                                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                                                                                            </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-input">
                                                        <br />
                                                       <label asp-for="CategoryId" class="control-label">Category Name</label>
                                                        <select asp-for="CategoryId" class ="form-control" asp-items="ViewBag.CategoryId"></select>
                                                    </div>
                                                </div>
                                               
                                            



                                <div class="col-12">
                                    <input type="submit" value="Create" style="width:100%" class="btn btn-success" />
                                </div>
                        @Html.ValidationSummary()
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

<br /><br /><br /><br /><br />
<div>
    <a class="btn btn-success" asp-action="Index">Back to List</a>
</div>








































